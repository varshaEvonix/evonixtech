<%- include ../admin/admin_head.ejs %>
<%- include ../admin/sidebar.ejs %>

<section id="main-content">
    <section class="wrapper">

        <div class="row">
            <div class="col-lg-12 main-chart">
                <h1 class="phead">Student Listing</h1><br>
                <div class="col-sm-12">
                    <div class="embed-responsive embed-responsive-16by9">

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Student Name</th>
                                    <th>Email Id</th>
                                    <th>Country</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                    <th class="text-right">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% _.each(post, function (corndog) { %>
                                <tr>
                                    <td><%= corndog.student_firstname %> <%= corndog.student_lastname %></td>
                                    <td> <%= corndog.student_email %></td>
                                    <td> <%= corndog.student_country %></td>

                                    <td>
                                        <% if(corndog.loan_amount!=null) {%>
                                        $ <%= corndog.loan_amount %>
                                        <%
                                        }else{

                                        }
                                        %></td>

                                    <% if (corndog.student_active == 0){%>
                                    <td><a href="javascript:void(0);" data='<%= corndog.student_id %>' data-value='1' class="btn btn-danger btn-sm change_status"> De-Active</a></td>
                                    <%
                                    }else{%>
                                    <td><a href="javascript:void(0);" data='<%= corndog.student_id %>' data-value='0' class="btn btn-success btn-sm change_status">Active</a></td>
                                    <%
                                    }
                                    %>
                                    <td class="text-right">
                                        <a type="button" href="/viewdetails/<%= corndog.student_id %>" class="btn btn-info btn-sm"   data-original-title="View Details">View</a>
                                    </td>
                                </tr>
                                <% }) %>

                            </tbody>
                        </table>

                    </div>
                    <div class="text-right">
                        <ul class="pager pagination">
                            <li class="previous"><a href="/admin/allstudents/<%= the_prev %>">&larr; Previous</a></li>
                            <li>
                                <% for(var i=1; i<=tot; i++) { %>
                                <a href="/admin/allstudents/<%= i %>"><%= i %></a>
                                <% } %>
                            </li>

                            <li class="next"><a href="/admin/allstudents/<%= the_next %>">Next &rarr;</a></li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </section>
</section>
<%- include ../admin/stufoot.ejs %>
<link href="../../index_files/stdash/css/sweetalert.css" rel="stylesheet">
<script src="../../index_files/stdash/js/sweetalert.min.js"></script>
<script src="../../index_files/stdash/js/sweetalert-dev.js"></script>
<script>
    $('.change_status').click(function () {
        var status = $(this).attr('data-value') == '0' ? 'De-activate' : 'Activate';
        var stu_status = $(this).attr('data-value');
        var student_id = $(this).attr('data');
        swal({title: "Are you sure?",
            type: "warning",
            showCancelButton: true,
            confirmButtonColor: "#DD6B55",
            confirmButtonText: "Yes, " + status + " it!",
            closeOnConfirm: false
        },
        function () {

            $.ajax({
                url: "/change_status",
                type: "POST",
                async: true,
                dataType: 'json',
                data: {student_id: student_id, stu_status: stu_status},
                //your form data to post goes here
                success: function (response) {
                    window.location.reload();
                }
            });

        });
    });
</script>
<script>
    $('#allstudents').addClass('active');
</script>