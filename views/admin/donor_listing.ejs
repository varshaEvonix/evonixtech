<%- include ../admin/admin_head.ejs %>
<%- include ../admin/sidebar.ejs %>

<section id="main-content">
    <section class="wrapper">

        <div class="row">
            <div class="col-lg-12 main-chart">
                <h1 class="phead">Donors Listing</h1><br>
                <% if(post.length > 0){ %>
                <button id="generate-excel" class="btn btn-primary pull-right">Generate Excel sheet</button>
                <% } %>
                <div class="col-sm-12">
                    <!--<div id="dvData" class="embed-responsive embed-responsive-16by9">-->
                    <div id="dvData">

                        <table class="table table-hover table2excel">
                            <thead>
                                <tr>
                                    <th>Funder Name</th>
                                    <th>Funder Email Id</th>
                                    <th>Funded Amount</th>
                                    <th>Student Funded (URL)</th>
                                    <th>Student Email Id</th>
                                    <th>Funding_date</th>
                                    <!--<th style="display: none">Stripe Transaction Details</th>-->
                                </tr>
                            </thead>
                            <tbody>
                                 <% if(post.length > 0){ %>
                                <% _.each(post, function (corndog) { %>
                                <tr>
                                    <td><%= corndog.donors_name %></td>
                                    <td><%= corndog.donor_email %></td>
                                    <td>$ <%= corndog.funded_amount %></td>
                                    <td><label> <%= sails.getBaseUrl()+'/single_profile/'+ corndog.student_id %></label></td>
                                    <td> <%= corndog.student_email %></td>
                                    <td> <%= corndog.funding_date %></td>
                                    <!--<td style="display: none"> <%= corndog.stripe_token %></td>-->
                                </tr>
                                <% }) %>
                                 <% }else{ %>
                                 <tr><td>No Record Found</td></tr>
<% } %>
                            </tbody>
                        </table>

                    </div>
                    <div class="text-right">
                         <% if(post.length > 0){ %>
                        <ul class="pager pagination">
                            <li class="previous"><a href="/admin/donors/<%= the_prev %>">&larr; Previous</a></li>
                            <li>
                                <% for(var i=1; i<=tot; i++) { %>
                                <a href="/admin/donors/<%= i %>"><%= i %></a>
                                <% } %>
                            </li>

                            <li class="next"><a href="/admin/donors/<%= the_next %>">Next &rarr;</a></li>
                        </ul>
                         <% } %>
                    </div>
                </div>

            </div>
        </div>
    </section>
</section>
<%- include ../admin/stufoot.ejs %>
