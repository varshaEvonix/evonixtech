<section id="main-content">
    <section class="wrapper" ng-app="postApp" ng-controller="postController">
        <br>
        <div class="row">
            <div class="col-sm-9">

                <!--form action="/education_edit_submit" method="POST" role="form"-->


                <h2>Media Section</h2><br>
                <h3>Your Video</h3><br>

                <form id="userVideo" enctype="multipart/form-data" action="/upload_media/<%= student_info[0].student_id %>" method="POST" name="userVideo" novalidate>
                    <div class="form-group row">

                        <div class="col-xs-10">
                            <label for="student_firstname">Enter your video link: <a href="#" data-toggle="tooltip" title="Make a statement about your life and ambitions here.  Many funders skip the text and play the video instead. This will be a link to a video hosted on YouTube or Vimeo."> <i  class="glyphicon glyphicon-question-sign"></i></a></label><br>
                            <input type="text" data-validation="custom" data-validation-regexp="^(?:https?:\/\/)?(?:www\.)?youtube\.com\/watch\?(?=.*v=((\w|-){11}))(?:\S+)?$" data-validation-error-msg="Enter a youtube embedded link" value="<%= student_info[0].video_link %>" name="video_link" class="form-control">

                            <div class="row">

                            </div>
                        </div>
                        <div class="col-md-12">
                            <h3>Your images:<span class="small"><a href="#" data-toggle="tooltip" title="Show that youâ€™re for real.  You can include pictures of your dorm room (clean ones), with friends, teachers, employers, and anything related."> <i  class="glyphicon glyphicon-question-sign"></i></a></span></h3> <br>

                          <div class="row">
            <div class="col-md-12">
             <input type="file" name="image1[]" id="filer_input2" multiple="multiple"><br>
           </div>
          </div>
                            <div class="row">
                                <% _.each(photos, function (photos) { %>
                                <div class="modal fade col-md-5 center" style="margin:auto" id="myModal" role="dialog">
                                    <div class="modal-dialog">

                                    </div><br>
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <h4 class="modal-title">Delete photo</h4>
                                        </div>
                                        <div class="modal-body">
                                            <p>Do you really want to remove this photo? You cannot undo this action.</p>
                                        </div>
                                        <div class="modal-footer">
                                            <a href="/remove_image/<%= photos.student_id %>/<%= photos.photo_id %>"><button type="button" class="btn btn-default">Yes</button></a>
                                            <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4" >
                                    <div style="text-align:center">
                                        <a href="../index_files/uploads/documents/<%= photos.photo_path %>" data-lightbox="example-set">
                                            <img class="img-responsive" src="../index_files/uploads/documents/<%= photos.photo_path %>" style="height:182px; width:273px"></a><br>
                                        <a class="pointer delete-img" ><i class="fa fa-times" aria-hidden="true"></i> Delete</a>
                                    </div>
                                </div>
                                <% }) %>
                            </div>
                            <br>

                            <div class="row">
                                <div class="col-md-4">
                                    <input type="submit" value="Submit" class="upload btn btn-default">

                                    <a href="/viewprofile/<%= student_info[0].student_id %>"><button class="btn btn-default text-center">Cancel</button></a>
                                </div>
                            </div>
                                      
                        </div>
                </form>

                <br></div>



        </div>.
        <div class="col-md-3">
            <%- include ../stud_right.ejs %>
        </div>

    </section>
</section> 

